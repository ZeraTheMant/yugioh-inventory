extends layout

block content
	h1 #{title}
	
	form(method='POST' action='')
		div.form-group
			label(for='attribute') Attribute:
			input#attribute.form-control(type='text', placeholder='An elemental form' name='attribute' value=(undefined===attribute ? '' : attribute.name), required='true')
		button.btn.btn-primary(type='submit') Submit
			
	if errors
		ul
			for error in errors
				li!= error.msg