extends layout

block content
	h1 #{title}
	
	form(method='POST' action='')
		div.form-group
			label(for='spell_type') Monster Type:
			input#spell_type.form-control(type='text', placeholder='Enter spell type' name='spell_type' value=(undefined===spell_type ? '' : spell_type.name), required='true')
		button.btn.btn-primary(type='submit') Submit
			
	if errors
		ul
			for error in errors
				li!= error.msg