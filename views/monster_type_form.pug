extends layout

block content
	h1 #{title}
	
	form(method='POST' action='')
		div.form-group
			label(for='monster_type') Monster Type:
			input#monster_type.form-control(type='text', placeholder='Enter monster type' name='monster_type' value=(undefined===monster_type ? '' : monster_type.name), required='true')
		button.btn.btn-primary(type='submit') Submit
			
	if errors
		ul
			for error in errors
				li!= error.msg